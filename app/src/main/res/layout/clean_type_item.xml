<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bill_up_close"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clean_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="洗衣类别"/>

        <TextView
            android:id="@+id/clean_type_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="价格"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/number_button_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:src="@drawable/ic_sub_button"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/num_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"/>

        <ImageButton
            android:id="@+id/number_button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:src="@drawable/ic_add_button"
            android:layout_weight="1"/>


    </LinearLayout>






</LinearLayout>