<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/clr_blue"
        android:padding="13dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/register_back"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imag"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/imag"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:text="返回"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:padding="15dp"
        android:background="@drawable/line_login"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/register_tv"
            android:text="Phone:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/register_phone"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/register_tv"
            android:textSize="17sp"
            android:inputType="number"
            android:maxLength="11"
            android:background="@null"
            android:textColorHint="#BEBEBE"
            style="?android:attr/textViewStyle"
            android:hint="请输入手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/line_login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_marginLeft="10dp"
            android:text="验证码:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/register_input_verify"
            android:layout_weight="2"
            android:textSize="17sp"
            android:inputType="number"
            android:background="@null"
            android:maxLength="4"
            style="?android:attr/textViewStyle"
            android:hint="请输入验证码"
            android:textColorHint="#BEBEBE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/register_get_verify"
            android:background="#BEBEBE"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:padding="15dp"
        android:background="@drawable/line_login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/register_tv1"
            android:text="密码:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/register_pawd"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/register_tv1"
            android:textSize="17sp"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:hint="请输入密码"
            android:textColorHint="#BEBEBE"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:padding="15dp"
        android:background="@drawable/line_login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/register_tv2"
            android:text="确认密码:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/register_okpawd"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/register_tv2"
            android:textSize="17sp"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:hint="输入确认密码"
            android:textColorHint="#BEBEBE"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <Button
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:id="@+id/register_enter"
        android:text="注册"
        android:background="#d5d5d5"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</LinearLayout>